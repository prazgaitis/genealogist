<p id="notice"><%= notice %></p>

<h1>Compilations</h1>

<table>
  <thead>
    <tr>
      <th>Page count</th>
      <th>Url</th>
      <th>Status</th>
      <th>Uuid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @compilations.each do |compilation| %>
      <tr>
        <td><%= compilation.page_count %></td>
        <td><%= compilation.url_identifier %></td>
        <td><%= compilation.status %></td>
        <td><%= compilation.uuid %></td>
        <td><%= link_to 'Show', compilation %></td>
        <td><%= link_to 'Edit', edit_compilation_path(compilation) %></td>
        <td><%= link_to 'Destroy', compilation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

